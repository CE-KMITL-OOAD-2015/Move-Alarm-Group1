<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="@mipmap/background">
    <RelativeLayout
        android:background="@color/colorheader"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:id="@+id/header"
            android:textSize="@dimen/headerfont"
            android:text="@string/app_name"
            android:textColor="@color/colorheadertext"
            android:textStyle="normal">
        </TextView>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            >
            <Button
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="onSettingClicked"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/setting"
                android:background="@mipmap/setting_button">
            </Button>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/banner"
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/topbody">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                >
                  <RelativeLayout
                      android:layout_width="@dimen/setalarmLW"
                      android:layout_height="@dimen/setalarmLHS"
                      android:id="@+id/setalarm"
                      android:layout_alignParentLeft="true"
                  >
                      <ImageButton
                          android:layout_centerHorizontal="true"
                          android:layout_centerInParent="true"
                          android:layout_width="@dimen/setalarmW"
                          android:layout_height="@dimen/setalarmH"
                          android:onClick="onSetAlarmClicked"
                          android:background="@mipmap/movealarm_icon"
                          android:id="@+id/setalarmImage">
                      </ImageButton>
                      <TextView
                          android:layout_centerHorizontal="true"
                          android:layout_centerVertical="true"
                          android:layout_margin="2dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:layout_below="@id/setalarmImage"
                          android:text="@string/setalarm"
                          android:textSize="@dimen/normalfontH"
                          />
                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/nextAlarm"
                      android:layout_toRightOf="@id/setalarm"
                      android:layout_centerInParent="true">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/nextAlarmTx"
                          android:textSize="@dimen/normalfontH"
                          android:text="@string/next_alarm"
                          android:layout_alignParentLeft="true"
                          />

                      <RelativeLayout
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:id="@+id/hour"
                          android:layout_below="@id/nextAlarmTx"
                          android:layout_marginTop="@dimen/marginS"
                          android:layout_alignParentLeft="true">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/normalfontSS"
                              android:text="@string/hour"
                              android:id="@+id/hourtext"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:background="@color/timebox"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/hourtext"
                              android:layout_margin="1dp"
                              android:id="@+id/hournumber10"
                              android:textSize="@dimen/timetext"
                              android:layout_alignParentLeft="true"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:background="@color/timebox"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/hourtext"
                              android:layout_margin="1dp"
                              android:layout_toRightOf="@id/hournumber10"
                              android:textSize="@dimen/timetext"
                              android:id="@+id/hournumber1"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/hourtext"
                              android:layout_margin="0dp"
                              android:layout_toRightOf="@id/hournumber1"
                              android:textSize="@dimen/timetext"
                              android:id="@+id/hdoublecolon"/>
                      </RelativeLayout>
                      <RelativeLayout
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:id="@+id/minute"
                          android:layout_below="@id/nextAlarmTx"
                          android:layout_marginTop="@dimen/marginS"
                          android:layout_toRightOf="@id/hour">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/normalfontSS"
                              android:text="@string/minute"
                              android:id="@+id/minutetext"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:background="@color/timebox"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/minutetext"
                              android:layout_margin="1dp"
                              android:id="@+id/minutenumber10"
                              android:textSize="@dimen/timetext"
                              android:layout_alignParentLeft="true"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:background="@color/timebox"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/minutetext"
                              android:layout_margin="1dp"
                              android:layout_toRightOf="@id/minutenumber10"
                              android:textSize="@dimen/timetext"
                              android:id="@+id/minutenumber1"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/minutetext"
                              android:layout_margin="0dp"
                              android:layout_toRightOf="@id/minutenumber1"
                              android:textSize="@dimen/timetext"
                              android:id="@+id/mdoublecolon"/>
                      </RelativeLayout>
                      <RelativeLayout
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:id="@+id/second"
                          android:layout_below="@id/nextAlarmTx"
                          android:layout_marginTop="@dimen/marginS"
                          android:layout_toRightOf="@id/minute">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/normalfontSS"
                              android:text="@string/second"
                              android:id="@+id/secondtext"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:background="@color/timebox"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/secondtext"
                              android:layout_margin="1dp"
                              android:id="@+id/secondnumber10"
                              android:textSize="@dimen/timetext"
                              android:layout_alignParentLeft="true"/>
                          <TextView
                              android:gravity="center"
                              android:layout_centerHorizontal="true"
                              android:layout_centerVertical="true"
                              android:background="@color/timebox"
                              android:layout_width="@dimen/BoxV"
                              android:layout_height="@dimen/BoxH"
                              android:layout_below="@id/secondtext"
                              android:layout_margin="1dp"
                              android:layout_toRightOf="@id/secondnumber10"
                              android:textSize="@dimen/timetext"
                              android:id="@+id/secondnumber1"/>
                      </RelativeLayout>
                  </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/topbody"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/midbody">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/pf">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/profilelayout">
                <ImageButton
                    android:layout_width="@dimen/scircleboxW"
                    android:layout_height="@dimen/scircleboxH"
                    android:onClick="onProfileClick"
                    android:id="@+id/profileicon"
                    android:background="@mipmap/profile_icon"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profiletext"
                    android:text="@string/profile"
                    android:textSize="@dimen/normalfontN"
                    android:gravity="center"
                    android:layout_below="@id/profileicon"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/friendlayout"
        android:layout_toRightOf="@id/profilelayout">
        <ImageButton
            android:layout_width="@dimen/scircleboxW"
            android:layout_height="@dimen/scircleboxH"
            android:onClick="onFriendClick"
            android:id="@+id/friendicon"
            android:background="@mipmap/friend_icon"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friendtext"
            android:text="@string/leaderboard"
            android:textSize="@dimen/normalfontN"
            android:gravity="center"
            android:layout_below="@id/friendicon"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pf"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:layout_width="@dimen/scircleboxLW"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:id="@+id/eventlayout">
                    <ImageButton
                        android:layout_width="@dimen/scircleboxW"
                        android:layout_height="@dimen/scircleboxH"
                        android:onClick="onEventClick"
                        android:id="@+id/eventicon"
                        android:background="@mipmap/event_btn"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/eventtext"
                        android:text="@string/event"
                        android:textSize="@dimen/normalfontN"
                        android:gravity="center"
                        android:layout_below="@id/eventicon"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/scircleboxLW"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:id="@+id/aboutlayout"
                android:layout_toRightOf="@id/eventlayout">
                <ImageButton
                    android:layout_width="@dimen/scircleboxW"
                    android:layout_height="@dimen/scircleboxH"
                    android:onClick="onAboutClick"
                    android:id="@+id/abouticon"
                    android:background="@mipmap/about_icon"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/abouttext"
                    android:text="@string/about"
                    android:textSize="@dimen/normalfontN"
                    android:gravity="center"
                    android:layout_below="@id/abouticon"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/midbody"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:onClick="onHowtouseClicked"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/howtouse"
                android:textSize="@dimen/normalfontS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>